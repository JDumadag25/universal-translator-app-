<h1><%= @recipient.username %></h1>
<% @conversation.messages.each do |message| %>
  <% @translated_messages.each do |translation| %>
    <%= message.sender.username %><br>
    <%= translation %><br><br><br>
  <% end %>
<% end %>

<%= form_for @conversation do |f| %>
  <%= f.label :message %>
  <%= f.fields_for :messages, @conversation.messages.build do |message| %>
    <%= message.hidden_field :recipient_id, value: @recipient.id %><br>
    <%= message.text_area :content %><br>
    <%= message.hidden_field :sender_id, value: @user.id %>
  <% end %>
  <%= f.submit "Send" %>
<% end %>

<p><%= link_to 'Your Conversations', welcome_path %></p>

<p><%= link_to 'Delete Conversation', @conversation, method: :delete %></p>
