<h1><%= session[:username] %>'s Links</h1>
<div class="list-group">
  <% if @user.conversations && @user.conversations.length > 0 %>
    <ul>
      <% @user.conversations.each do |convo| %>
        <% convo.users.each do |key, user| %>
          <% if user.username != @user.username %>
            <a href='/conversations/<%=convo.id%>' class='list-group-item'><%= user.username %></a>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  <% else %>
      <h3>No new links.</h3>
  <% end %>
</div>
