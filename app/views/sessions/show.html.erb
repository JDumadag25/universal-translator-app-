<h1>Welcome to Trek, <%= session[:username] %>.</h1>

<p><%= link_to 'Start New Conversation', new_conversation_path %></p>

<ul>
  <% @user.conversations.each do |convo| %>
    <% convo.users.each do |user| %>
      <% if user.name != @user.name %>
        <li><%= link_to user.name, convo %></li>
      <% end %>
    <% end %>
  <% end %>
</ul>
