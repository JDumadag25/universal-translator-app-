<div class="main-sidebar">
  <div class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <% if @user %>
          <img alt="User Image" class="user-image" src="<%= @random_image %>" />
        <% end %>
      </div>
      <div class="pull-left info">
        <p>
          <%= session[:username] %>
        </p>
        <a href="#">
          <% if logged_in? %>
            <i class="fa fa-circle text-green">
            </i>Online
            </a>
          <% else %>
            <i class="fa fa-circle text-red">
            </i>Offline
            </a>
          <% end %>
      </div>
    </div>
    <ul class="sidebar-menu">
      <li class="header">
        SERVICES
      </li>
      <li class="active">
        <a href="/conversations/new">
      <span>Start New Link</span>
      </a>
      </li>
      <li>
        <a href="/your_conversations">
        <span>Current Links</span>
        </a>
      </li>
    </ul>
  </div>
</div>
