<% if flash[:errors] %>
<% flash[:errors].each{ |error| %>
  <%= error %>
<% } end %>


<%= form_for @message do |f| %>
<%= f.label :message %> <br>
<%= f.text_area :content %> <br>
<%= f.label :conversation %> <br>
<%= f.text_field :conversation_id %> <br>
<%= f.label :user %> <br>
<%= f.collection_select :user_id, @users, :id, :name %> <br>
<%= f.submit "Send Message"%>
<% end %>
